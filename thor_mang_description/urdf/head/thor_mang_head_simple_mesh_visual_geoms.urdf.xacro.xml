<?xml version="1.0"?>

<robot  name="thor_arm_7dof" xmlns:xacro="http://www.ros.org/wiki/xacro">

<macro name="neck_visual_geom_macro">
    <visual>
      <origin
        xyz="0 0 -0.111"
        rpy=" ${M_PI*0.5} 0 ${-M_PI*0.5}" />
      <geometry>
        <mesh
          filename="package://thor_mang_description/meshes/simple/neck.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:black/>
    </visual>
</macro>  

<macro name="head_visual_geom_macro">
    <visual>
      <origin
        xyz="0 0 0"
        rpy=" ${M_PI*0.5} 0 ${M_PI*0.5}" />
      <geometry>
        <mesh
          filename="package://thor_mang_description/meshes/simple/head.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:black/>
    </visual>
</macro>  

</robot>

