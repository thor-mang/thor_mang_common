<?xml version="1.0"?>

<robot  name="thor_arm_7dof" xmlns:xacro="http://www.ros.org/wiki/xacro">

<macro name="arm_shoulder_pitch_visual_geom_macro" params="reflect y_offset">
    <visual>
      <origin
        xyz="0 0 0"
        rpy="${-M_PI*0.5} ${M_PI*0.5} 0" />
      <geometry>
        <mesh
          filename="package://$(optenv THOR_DESCRIPTION_PACKAGE thor_mang_description)/meshes/visual/shoulder_pitch_left.stl" scale="0.001 0.001 ${0.001 * reflect}"/>
      </geometry>
      <xacro:black/>
    </visual>
</macro>  

