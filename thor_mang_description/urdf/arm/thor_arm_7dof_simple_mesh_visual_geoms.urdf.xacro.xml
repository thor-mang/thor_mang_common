<macro name="arm_wrist_roll_visual_geom_macro" params="reflect">
    <visual>
      <origin
        xyz="0 0 0"
        rpy=" ${M_PI*0.5} 0 ${-M_PI*0.5}" />
      <geometry>
        <mesh
          filename="package://thor_mang_description/meshes/simple/wrist_roll_left_mod.stl" scale="${-0.001 * reflect} 0.001 0.001"/>
