<?xml version="1.0"?>

<robot  name="thor_arm_7dof" xmlns:xacro="http://www.ros.org/wiki/xacro">

<macro name="arm_shoulder_pitch_visual_geom_macro" params="reflect y_offset">
    <visual>
      <origin
        xyz="0 ${reflect*y_offset} 0"
        rpy=" ${M_PI} ${M_PI*0.5} 0" />
      <geometry>
        <mesh
          filename="package://thor_mang_description/meshes/simple/shoulder_pitch_left.stl" scale="0.001 ${0.001 * reflect} 0.001"/>
      </geometry>
      <xacro:black/>
    </visual>
</macro>  

<macro name="arm_shoulder_roll_visual_geom_macro">
    <visual>
      <origin
        xyz="0.024 0 0"
        rpy=" ${M_PI*0.5} 0 ${-M_PI*0.5}" />
      <geometry>
        <mesh
          filename="package://thor_mang_description/meshes/simple/shoulder_roll_left.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:black/>
    </visual>
</macro>  

<macro name="arm_shoulder_yaw_visual_geom_macro" params="z_offset">
    <visual>
      <origin
        xyz="0 0 ${z_offset}"
        rpy=" ${M_PI*0.5} 0 ${-M_PI*0.5}" />
      <geometry>
        <mesh
          filename="package://thor_mang_description/meshes/simple/shoulder_yaw_left.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:black/>
    </visual>
</macro>  

<macro name="arm_elbow_visual_geom_macro">
